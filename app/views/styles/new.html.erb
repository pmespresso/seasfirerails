<%= render 'shared/page_title', title: 'Create New Style' %> 

<%= render 'shared/errors', obj: @style %>

<div class='row col-sm-12 '>
	<div class='well col-xs-12 col-md-8 col-md-offset-2 '>
		<%= form_for @style do |f| %>
			
			<%= f.label :name %> <br/>
			<%= f.text_field :name %> <br/> <br/>
			
			<%= f.submit 'Create Style', class: 'btn btn-info' %> <br/>

		<% end %>
	</div>
</div>