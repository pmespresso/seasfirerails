<%= render 'shared/page_title', title: 'All Fires' %>

<% @fires.each do |fire| %>
	<div class="row">
	
		<div class="col-md-2">
			<section class="diver_info center">
				<%= gravatar_for fire.diver, size: 100 %>
				<h5>Diver Name: <%= fire.diver.divername %></h5>
			</section>
		</div>

		<div class="col-lg-6 well">
			<h4> <%= link_to fire.name, fire_path(fire), class: "post-title" %> </h4>
			<h5> <%= fire.summary %> </h5>
			<p>
				<span class='quiet'><small><%= time_ago_in_words(fire.created_at) %></small></span>
			</p>
		</div>

		<div class='col-md-4'>
			<%= image_tag(fire.picture.url, size: "250x150", class: "gravatar") if fire.picture? %>
		</div>
	</div>
<% end %>