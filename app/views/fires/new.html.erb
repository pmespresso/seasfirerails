<h1> Create New Fire </h1>

<%= form_for :fires do |f| %>

<div class="field">
	<%= f.label :name %><br>
	<%= f.text_area :name %>
</div>

<div class="field">
	<%= f.label :summary %><br>
	<%= f.text_area :summary %>
</div>

<div class="field">
	<%= f.label :description %><br>
	<%= f.text_area :description %>
</div>

<div class="actions">
<%= f.submit %>
</div>

<%end%>