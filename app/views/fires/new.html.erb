<h1 style='text-align: center'> Create New Fire </h1>
<hr/>

<div class='row'>
	<div class='well col-md-8 col-md-offset-2'>
		<%= form_for @fire do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :summary %>
			<%= f.text_field :summary %>

			<%= f.label :description %>
			<%= f.text_area :description, rows: 10%>
			
			<%= f.submit 'Create Fire', class: 'btn btn-success' %>

		<% end %>
	</div>
</div>